
<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded shadow shadow-sm">
                        <div class="card-header fa">
                            <h3 class="mb-0 my-2 text-primary">Edit <%= resource_name.to_s.humanize %></h3>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off">
                                <div class="form-group">                                
                                    <%= f.label :email, class: "fa" %>
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your E-mail" %>
                                </div>
                                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                    <div>Currently waiting confirmation for: 
                                      <%= resource.unconfirmed_email %>    
                                    </div>
                                <% end %>
                                <div class="form-group">
                                    <%= f.label :password, class: "fa"  %>
                                    <i>(leave blank if you don't want to change it)</i>
                                    
                                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Create new-password" %>
                                    <% if @minimum_password_length %>                        <em><%= @minimum_password_length %> characters minimum
                                    </em>
                                    <% end %>
                                </div>
                                <div class="form-group">
                                    <%= f.label :password_confirmation, class: "fa"  %>
                                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm password" %>
                                </div>
                                <div class="form-group">
                                  <%= f.label :current_password, class: "fa" %> 
                                  <i>(we need your current password to confirm your changes)</i>
                                  <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control", placeholder: "enter current password" %>
                                </div>
                                <div class="form-group">
                                    <%= f.submit "Update", class: "btn btn-success btn-lg" %>
                                    
                                </div>
                                <div class="card-header">
                                  <div class="fa">
                                  <h3 class="mb-0 my-2 text-primary">Cancel my account</h3>
                                  </div>
                                </div><br>
                                <div class="text-center">
                                <p class="fa">Unhappy? 
                                  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "fa btn btn-success btn-lg" %>
                                </p>
                                </div>
                                <%= link_to "Back", :back %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/row-->
            <% end %>

        </div>
        <!--/col-->
    </div>
    <!--/row-->

</div>