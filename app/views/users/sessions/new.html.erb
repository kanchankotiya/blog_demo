
<div class="container">
    <div class="row">
        <div class="col-md-12 min-vh-100 d-flex flex-column justify-content-center">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <!-- form card login -->
                    <div class="card rounded shadow shadow-sm">
                        <div class="card-header fa">
                            <h3 class="mb-0 text-primary">Login</h3>
                        </div>                        
                        <div class="card-body">
                            <form class="form" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST">
                                <div class="form-group">                          
                                    <%= f.label :email, class: "fa" %>
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control fa", placeholder: "Enter your E-mail" %>
                                </div>
                                <div class="form-group">                                   
                                    <%= f.label :password, class: "fa"  %>
                                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control fa", placeholder: "Enter your password"  %>
                                </div>
                                 <% if devise_mapping.rememberable? %>
                                <div>
                                  <label class="custom-control custom-checkbox">
                                   <%= f.check_box :remember_me %>
                                   <%= f.label :remember_me %>
                                  </label>
                                </div>   
                                <div>                        
                                <%= f.submit "Log in", class: "btn btn-success btn-lg" %>
                                </div><br>
                                <div>
                                  <%= render "users/shared/links" %>
                                </div> 
                            </form>
                        </div>
                        
                        <% end -%>
                        <!--/card-block-->
                        
                    </div>
                    <!-- /form card login -->
                </div>
            </div>
            <!--/row-->
          <% end %>
        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>


