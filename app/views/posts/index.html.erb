<h1 class="m-5 p-3 shadow"><center>Listing post</center></h1>

<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


<div class="container-fluid table-responsive">
  <table class="table table-hover">
    <thead class="thead-dark">
    <tr>
      <th><b>#</b></th>
      <th>Title</th>
      <th>Description</th>
      <th>E-mail</th>
      <th>Image</th>
      <th>Created On</th>
      <th>Action</th>
    </tr>
    </thead>

    <% @posts.each do |post| %>
      <tr>
        <th scope="row">
        <td><%= post.title %></td>
        <td><%= post.desc %></td>
        <td>
          <% if post.image.present? %>
            <%= image_tag post.image.url, class: "w-25" %>
          <% else %>
            <%= image_tag 'download', class: "w-25" %>
          <% end %>  
        </td> 
        <td><%= post.date %></td> 
        <td>
          <%= link_to 'Show', post_path(post), class: "btn btn-primary" %>
          <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"  %>
        </td>
       </th>
      </tr>

    <% end %>
  </table>

  <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</div>
