<div class="container">
  <div class="table-responsive text-center">
    <table class="table table-hover">
      <thead class="thead-dark">
      <tr>
        <th><b>#</b></th>
        <th>Title</th>
        <th>Text</th>
        <th>Image</th>
        <th>Comment</th>
      </tr>
      </thead>

      
        <tr>
          <th scope="row">
          <td><%= @article.title %></td>
          <td><%= @article.text %></td>
          <td>
            <% if @article.image.present? %>
              <%= image_tag @article.image.url, class: "w-25" %>
            <% else %>
              <%= image_tag 'download', class: "w-25" %>
            <% end %> 
          </td>
          <td>
          <% @article.comments.each do |comment| %>
              <%= comment.commenter %>
          <% end %>
          </td>
         </th>
        </tr>

    </table>
  </div>

  
  <div class="text-center">
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary" %> |
    <%= link_to 'Back', articles_path, class: "btn btn-primary" %>
    <%= link_to 'List', articles_path, class: "btn btn-primary" %>
  </div>

</div>