
<div class="container">
  <h1 class="m-5 p-3 shadow text-center">
  New Article
  </h1>
  <div class="card">
    <div class="card-body">
      <%= form_for @article do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@article.errors.count, "error") %> prohibited
            the article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
      <% end %>
          </ul>
        </div>
      <% end %>
        <div class="form-group">
          <%= f.label :title, class: "fa" %>
          <%= f.text_field :title, class: "form-control", placeholder: "title" %>
        </div>
        <div class="form-group">
          <%= f.label :text, class: "fa" %>
          <%= f.text_area :text, class: "form-control", placeholder: "Text" %>
        </div>
        <%=f.file_field :image %>
        <div>
      <h3>Comments</h3>
      
        <div id='comments'>
          <% f.fields_for :comments do |comment| %>
            <%= render 'comment_fields', f: comment %>
          <% end %>
          <div class="links">
            <%= link_to_add_association 'add comment', f, :comments %>
          </div>  
        </div>
      
        <div class="text-center">
          <%= f.submit 'Save Article', class: "btn btn-primary"%>
          <%= link_to 'List', articles_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>  
  </div>  
</div>  
