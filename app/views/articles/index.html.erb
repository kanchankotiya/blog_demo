<h1 class="m-5 p-3 shadow"><center>Listing articles</center></h1>

<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


<div class="container-fluid table-responsive">
  <table class="table table-hover">
    <thead class="thead-dark">
    <tr>
      <th><b>#</b></th>
      <th>Title</th>
      <th>Text</th>
      <th>Image</th>
      <th>Action</th>
    </tr>
    </thead>

    <% @articles.each do |article| %>
      <tr>
        <th scope="row">
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td>
          <% if article.image.present? %>
            <%= image_tag article.image.url, class: "w-25" %>
          <% else %>
            <%= image_tag 'download', class: "w-25" %>
          <% end %>  
        </td>  
        <td>
          <%= link_to 'Show', article_path(article), class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary"  %>
          <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"  %>
        </td>
       </th>
      </tr>

    <% end %>
  </table>

  <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
</div>

